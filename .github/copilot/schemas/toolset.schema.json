{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Toolset",
  "type": "object",
  "required": ["id", "name", "tools"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "version": { "type": "string" },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    }
  }
}
